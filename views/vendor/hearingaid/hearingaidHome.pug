extends ../../layout/base

block append script 
    script(src="/JS/bundle/vendor/bundleVendor.js")     

block block 
    // Hero Section
    .vendor-hero-image(style=`background-image: url(${partner.bannerImage})`)
        img.m-auto.d-block.vendor-image(src=partner.profileImage alt='vendor Image')
    // Hero Section
    h3.center-heading.fs-4.text-center=partner.company
    hr
    // Mobile nav section
    include layout/mobileSidebar
    // Mobile nav section
    // Nav and Content section
    .container.ps-4.pe-4
        .row
            include layout/pcSidebar
            .col-10.border.border-color.width-100.p-0
                #carouselExampleIndicators.carousel.slide(data-bs-ride='carousel')
                    .carousel-indicators
                        each doc,index in partner.imageGallery
                            button(type='button' class=`${index === 0 ? "active" :""}` data-bs-target='#carouselExampleIndicators' data-bs-slide-to=index aria-current=`${index === 0 ?"true" : "false"}` aria-label=`Slide ${index}`)
                    .carousel-inner
                        each doc,index in partner.imageGallery
                            .carousel-item.side-h(class=`${index === 0 ? "active" :""}`)
                                img.d-block.w-100(src=doc alt='Vendor images')

                .p-2
                    h3.vendor-heading.fs-4.mb-0=partner.company
                    p.mt-0
                        | Lorem ipsum dolor, sit amet consectetur adipisicing elit. Possimus
                        | voluptates quo qui corporis nam rem.
                .p-5.pt-2
                    form#update_hearingaid(data-hearingId=partner.hiwpmID) 
                        div
                            .mb-3.row
                                label.col-sm-3.col-form-label.fw-bold(for='contactPerson') Contact Person Name:
                                .col-sm-7
                                    input.form-control.bg-li#contactPerson(type='text' value=partner.name )
                            .mb-3.row
                                label.col-sm-3.col-form-label.fw-bold(for='contactpersonPhone') Contact Person No:
                                .col-sm-7
                                    input.form-control.bg-li#contactpersonPhone(type='text' value=partner.phone )

                            .mb-3.row
                                label.col-sm-3.col-form-label.fw-bold(for='Service Type' ) Service Type :
                                .col-sm-7
                                    input.form-control.bg-li(type='text' value=partner.hearingAid.serviceType disabled readonly)
                            .mb-3.row
                                label.col-sm-3.col-form-label.fw-bold(for='hearingaid name' ) Center Name :
                                .col-sm-7
                                    input.form-control.bg-li(type='text' value=partner.company disabled readonly)
                            if partner.hearingAid.serviceType === 'repairStore'
                                .mb-3.row
                                    label.col-sm-3.col-form-label.fw-bold(for='Service Type' ) Battery Changing charge :
                                    .col-sm-7
                                        input.form-control.bg-li#batteryChanging(type='text' value=partner.hearingAid.batteryChangeCharge )
                                .mb-3.row
                                    label.col-sm-3.col-form-label.fw-bold(for='Service Type' ) Noice Fixing Charge :
                                    .col-sm-7
                                        input.form-control.bg-li#noiceFixing(type='text'  value=partner.hearingAid.noiseFixCharge )
                                .mb-3.row
                                    label.col-sm-3.col-form-label.fw-bold(for='Service Type' ) Cleaning Charge :
                                    .col-sm-7
                                        input.form-control.bg-li#cleaningCharge(type='text' value=partner.hearingAid.cleaningCharge )
                            .mb-3.row
                                label.col-sm-3.col-form-label.fw-bold(for='Phone') hearingaid Phone Number :
                                .col-sm-7
                                    input.form-control.bg-li#Phone(type='text' value=partner.centerPhone )
                            .mb-3.row
                                label.col-sm-3.col-form-label.fw-bold(for='Landline') hearingaid landline Number :
                                .col-sm-7
                                    input.form-control.bg-li#landline(type='text' value=partner.centerLandLine )
                            .mb-3.row
                                label.col-sm-3.col-form-label.fw-bold(for='hearingaidEmail') hearingaid Email:
                                .col-sm-7
                                    input.form-control.bg-li#hearingaidEmail(type='text' value=partner.email disabled readonly)
                            .mb-3.row
                                label.col-sm-3.col-form-label.fw-bold(for='city') hearingaid City:
                                .col-sm-7
                                    input.form-control.bg-li#city(type='text' value=partner.city placeholder='city')
                            .mb-3.row
                                label.col-sm-3.col-form-label.fw-bold(for='inputPassword') Location :
                                .col-sm-3
                                    input.form-control.bg-li#latitude(type='text' value=partner.location.coordinates[1] )
                                .col-sm-3
                                    input.form-control.bg-li#longtitude(type='text' value=partner.location.coordinates[0] )
                                .col-sm-1

                                    i.fa-solid.fa-location-dot.border.bg-li.fs-5.p-2.ps-3.pe-3.rounded.text-secondary
                            .mb-3.row
                                label.col-sm-3.col-form-label.fw-bold(for='inputPassword') Open / close hours :
                                .col-sm-3
                                    input.form-control.bg-li#openTime(type='text' value=partner.openTime )
                                .col-sm-3
                                    input.form-control.bg-li#closeTime(type='text'  value=partner.closeTime)
                            .mb-3.row
                                label.col-sm-3.col-form-label.fw-bold(for='Address') Address :
                                .col-sm-7
                                    textarea#Address.form-control.bg-li(rows='3' )= partner.address
                            div(class="d-grid m-5")
                                button.btn.btn-primary.btn-block(type='submit') Update 
                            h5.mt-5.fw-bold Verification Documents
                            .mb-3.row
                                label.col-sm-3.col-form-label.fw-bold(for='inputPassword') hearingaid Licence :
                                .col-sm-7
                                    a(href='#')
                                        label.col-sm-3.col-form-label.fw-bold View
                            .mb-3.row
                                label.col-sm-3.col-form-label.fw-bold(for='inputPassword') Aadhar :
                                .col-sm-7
                                    a(href='#')
                                        label.col-sm-3.col-form-label.fw-bold View
                            .mb-3.row
                                label.col-sm-3.col-form-label.fw-bold(for='inputPassword') PAN card :
                                .col-sm-7
                                    a(href='#')
                                        label.col-sm-3.col-form-label.fw-bold View
                            .mb-3.row
                                label.col-sm-3.col-form-label.fw-bold(for='inputPassword') Verified video :
                                .col-sm-7
                                    iframe.embed-responsive-item(src='https://www.youtube.com/embed/tgbNymZ7vqY' allowfullscreen='')

