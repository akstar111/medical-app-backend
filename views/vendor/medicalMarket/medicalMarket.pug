extends ../../layout/base

block append script 
    script(src="/JS/bundle/vendor/bundleVendor.js")     

block block 
    // Hero Section
    .vendor-hero-image(style=`background-image: url(${partner.bannerImage})`)
        img.m-auto.d-block.vendor-image(src=partner.profileImage alt='vendor Image')
    // Hero Section
    h3.center-heading.fs-4.text-center=partner.company
    hr
    // Mobile nav section
    include layout/mobileSidebar
    // Mobile nav section
    // Nav and Content section
    .container.ps-4.pe-4
        .row
            include layout/pcSidebar
            .col-10.border.border-color.width-100.p-0
                #carouselExampleIndicators.carousel.slide(data-bs-ride='carousel')
                    .carousel-indicators
                        each doc,index in partner.imageGallery
                            button(type='button' class=`${index === 0 ? "active" :""}` data-bs-target='#carouselExampleIndicators' data-bs-slide-to=index aria-current=`${index === 0 ?"true" : "false"}` aria-label=`Slide ${index}`)
                    .carousel-inner
                        each doc,index in partner.imageGallery
                            .carousel-item.side-h(class=`${index === 0 ? "active" :""}`)
                                img.d-block.w-100(src=doc alt='Vendor images')
                if market
                    .p-2
                        h3.vendor-heading.fs-4.mb-0=market.storeName
                        p.mt-0
                            | Lorem ipsum dolor, sit amet consectetur adipisicing elit. Possimus
                            | voluptates quo qui corporis nam rem.
                    .p-5.pt-2
                        form#update_market 
                            div
                                .mb-3.row
                                    label.col-sm-3.col-form-label.fw-bold(for='contactPerson') Contact Person Name:
                                    .col-sm-7
                                        input.form-control.bg-li#contactPerson(type='text' value=market.contactPersonName )
                                .mb-3.row
                                    label.col-sm-3.col-form-label.fw-bold(for='contactpersonPhone') Contact Person No:
                                    .col-sm-7
                                        input.form-control.bg-li#contactpersonPhone(type='text' value=market.contactPersonPhone )
                                .mb-3.row
                                    label.col-sm-3.col-form-label.fw-bold(for='market name' ) Company / Store Name :
                                    .col-sm-7
                                        input.form-control.bg-li(type='text' value=market.storeName disabled readonly)
                                .mb-3.row
                                    label.col-sm-3.col-form-label.fw-bold(for='Phone') Company / Store Phone Number :
                                    .col-sm-7
                                        input.form-control.bg-li#Phone(type='text' value=market.storePhone )
                                .mb-3.row
                                    label.col-sm-3.col-form-label.fw-bold(for='Landline') Company / Store landline Number :
                                    .col-sm-7
                                        input.form-control.bg-li#Landline(type='text' value=market.landline )
                                .mb-3.row
                                    label.col-sm-3.col-form-label.fw-bold(for='marketEmail') Company / Store Email:
                                    .col-sm-7
                                        input.form-control.bg-li#marketEmail(type='text' value=market.storeEmail disabled readonly)
                                .mb-3.row
                                    label.col-sm-3.col-form-label.fw-bold(for='inputPassword') Location :
                                    .col-sm-3
                                        input.form-control.bg-li#latitude(type='text' value=market.location.coordinates[1] )
                                    .col-sm-3
                                        input.form-control.bg-li#longtitude(type='text' value=market.location.coordinates[0] )
                                    .col-sm-1
                                        i.fa-solid.fa-location-dot.border.bg-li.fs-5.p-2.ps-3.pe-3.rounded.text-secondary
                                .mb-3.row
                                    label.col-sm-3.col-form-label.fw-bold(for='inputPassword') Open / close hours :
                                    .col-sm-3
                                        input.form-control.bg-li#openTime(type='text' value=market.openTime )
                                    .col-sm-3
                                        input.form-control.bg-li#closeTime(type='text'  value=market.closeTime)
                                .mb-3.row
                                    label.col-sm-3.col-form-label.fw-bold(for='Address') Address :
                                    .col-sm-7
                                        textarea#Address.form-control.bg-li(rows='3' )= market.address
                                div(class="d-grid m-5")
                                    button.btn.btn-primary.btn-block(type='submit') Update 
                                h5.mt-5.fw-bold Verification Documents
                                .mb-3.row
                                    label.col-sm-3.col-form-label.fw-bold(for='inputPassword') Company / Store Licence :
                                    .col-sm-7
                                        a(href='#')
                                            label.col-sm-3.col-form-label.fw-bold View
                                .mb-3.row
                                    label.col-sm-3.col-form-label.fw-bold(for='inputPassword') Aadhar :
                                    .col-sm-7
                                        a(href='#')
                                            label.col-sm-3.col-form-label.fw-bold View
                                .mb-3.row
                                    label.col-sm-3.col-form-label.fw-bold(for='inputPassword') PAN card :
                                    .col-sm-7
                                        a(href='#')
                                            label.col-sm-3.col-form-label.fw-bold View
                                .mb-3.row
                                    label.col-sm-3.col-form-label.fw-bold(for='inputPassword') Verified video :
                                    .col-sm-7
                                        iframe.embed-responsive-item(src='https://www.youtube.com/embed/tgbNymZ7vqY' allowfullscreen='')

                else 
                    div(class="d-grid m-5")
                        button.btn.btn-success.btn-block(type='button' data-bs-toggle="modal" data-bs-target="#myModal") Create
                #myModal.modal.fade
                    .modal-dialog.modal-lg
                        .modal-content
                            // Modal Header
                            .modal-header
                                h4.modal-title Add Profile Details
                                button.btn-close(type='button' data-bs-dismiss='modal')
                            // Modal body
                            .modal-body
                                form#create_medical_market
                                    div
                                        .mb-3.row
                                            label.col-sm-3.col-form-label.fw-bold(for='contactPerson') Contact Person Name:
                                            .col-sm-7
                                                input.form-control.bg-li#contactPerson(type='text' value=partner.name )
                                        .mb-3.row
                                            label.col-sm-3.col-form-label.fw-bold(for='contactpersonPhone') Contact Person No:
                                            .col-sm-7
                                                input.form-control.bg-li#contactpersonPhone(type='text' value=partner.phone )
                                        .mb-3.row
                                            label.col-sm-3.col-form-label.fw-bold(for=' name' ) Company / Store Name :
                                            .col-sm-7
                                                input.form-control.bg-li(type='text' value=partner.company disabled readonly)
                                        .mb-3.row
                                            label.col-sm-3.col-form-label.fw-bold(for='Phone') Company / Store Phone Number :
                                            .col-sm-7
                                                input.form-control.bg-li#Phone(type='text'  )
                                        .mb-3.row
                                            label.col-sm-3.col-form-label.fw-bold(for='Landline') Company / Store landline Number :
                                            .col-sm-7
                                                input.form-control.bg-li#Landline(type='text'  )
                                        .mb-3.row
                                            label.col-sm-3.col-form-label.fw-bold(for='Email') Company / Store Email:
                                            .col-sm-7
                                                input.form-control.bg-li#Email(type='text' value=partner.email disabled readonly)
                                        .mb-3.row
                                            label.col-sm-3.col-form-label.fw-bold(for='inputPassword') Location :
                                            .col-sm-3
                                                input.form-control.bg-li#latitude(type='text' )
                                            .col-sm-3
                                                input.form-control.bg-li#longtitude(type='text' )
                                            .col-sm-1
                                                i.fa-solid.fa-location-dot.border.bg-li.fs-5.p-2.ps-3.pe-3.rounded.text-secondary
                                        .mb-3.row
                                            label.col-sm-3.col-form-label.fw-bold(for='inputPassword') Open / close hours :
                                            .col-sm-3
                                                input.form-control.bg-li#openTime(type='text'  )
                                            .col-sm-3
                                                input.form-control.bg-li#closeTime(type='text' )
                                        .mb-3.row
                                            label.col-sm-3.col-form-label.fw-bold(for='Address') Address :
                                            .col-sm-7
                                                textarea#Address.form-control.bg-li(rows='3' value=partner.address)
                                        div(class="d-grid m-5")
                                            button.btn.btn-primary.btn-block(type='submit') Submit 

                            // Modal footer
                            .modal-footer
                                button.btn.btn-danger(type='button' data-bs-dismiss='modal') Close
