extends ../../layout/adminBase

block append script 
    script(src="/JS/bundle/admin/bundleAdmin.js")       

block block 
    #right.col-9 
        include ../../shared/detailsList
        .p-3
            .d-flex
                .flex-grow-1
                .p-5.pt-2
                    hr
                    .row.mt-3.ms-3.me-3
                        h6.col-6.fw-bold.main-color.mt-3.text-head
                            | Add and Edit Your Facilities
                        .col-6.d-grid.gap-2.d-md-flex.justify-content-md-end.m-0
                            button.btn.main-color-background.color-white.m-0.text-head(type='button' data-bs-toggle='modal' data-bs-target='#staticBackdrop-Facilities')
                                | Add More
                        //- Modal
                        #staticBackdrop-Facilities.modal.fade(data-bs-backdrop='static' data-bs-keyboard='false' tabindex='-1' aria-labelledby='staticBackdropLabel' aria-hidden='true')
                            .modal-dialog.modal-dialog-scrollable
                                .modal-content
                                    .modal-header
                                        h5#staticBackdropLabel.modal-title.text-uppercase.main-color
                                            | Add Laboratory Images
                                        button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                                    .modal-body
                                        form.row.g-3#create_laboratory_images
                                            .col-md-12
                                                label.form-label(for='images')
                                                    | images 
                                                    span.text-danger *
                                                input#laboratoryImages.form-control(type='file' multiple required='')
                                            .col-12.text-center
                                                button.btn.main-color-background.color-white(type='submit')
                                                    | Add Images
                                    .modal-footer
                                        button.btn.btn-secondary(type='button' data-bs-dismiss='modal')
                                            | Cancel
                    hr.m-0.ms-3.me-3
                    .d-flex.flex-wrap.justify-content-around.remove_hospital_images
                        each doc,index in partner.laboratory.labImages
                            div
                                img.mt-2(src=doc id=`imagepharmaceImages${index}` style='width:200px')
                                br
                                .d-grid
                                    button.btn.btn-danger.btn-block.rounded-0.deletePharmacyimages(data-id=partner.hiwpmID  data-for='rooms' data-index=index) Delete