extends ../layout/adminBase

block append script 
    script(src="/JS/bundle/admin/bundleAdmin.js")     

block block 
    #right.col-9
        .d-flex.bd-highlight.mt-3
            .p-2.flex-grow-1.bd-highlight
                h6.fs-5.text-body.fw-bold.text-uppercase Manage Modules
            .me-3.flex-grow-1.bd-highlight
                form.mt-0(action='')
                    .p-1.bg-light.rounded.rounded-pill.shadow-sm.mt-0
                        .input-group
                            input.form-control.border-0.bg-light(type='search' placeholder="What're you searching for?" aria-describedby='button-addon1')
                            .input-group-append
                                button#button-addon1.btn.btn-link.text-secondary(type='submit')
                                    i.fa.fa-search
            .p-2.bd-highlight
                i.fa-solid.fa-bell.fs-5.text-body
            .p-2.bd-highlight
                h6.fs-5.text-body.fw-bold |
            .p-2.bd-highlight
                h6.fs-5.text-body.fw-bold Akstar111
            .p-2.bd-highlight
                img.login-user-image(src='/Assets/image/profile.jpg' alt='user image')
        hr
        .d-flex
            .flex-grow-1.d-flex.justify-content-between
                h5.fw-bold.mt-3.ms-3 Modules
               
            .p-2
                p.text-primary.text-decoration-underline.m-0
        hr.m-0
        div
            .row.p-3
                a.col.m-3.shadow.p-3.bg-primary.text-white.pt-4(href='/admin/module-management/homecare-service')
                    p.fw-bold.text-center Homecare Service
                a.col.m-3.shadow.p-3.bg-primary.text-white.pt-4(href='/admin/module-management/deaddiction-service')
                    p.fw-bold.text-center De-Addiction service
                a.col.m-3.shadow.p-3.bg-primary.text-white.pt-4(href='/admin/module-management/ambulance-service')
                    p.fw-bold.text-center Ambulance Service
        div
            .row.p-3
                a.col.m-3.shadow.p-3.bg-primary.text-white.pt-4(href='/admin/module-management/hospital-packages')
                    p.fw-bold.text-center Hospital Packages
                a.col.m-3.shadow.p-3.bg-primary.text-white.pt-4(href='/admin/module-management/fitness')
                    p.fw-bold.text-center Fitness
                a.col.m-3.shadow.p-3.bg-primary.text-white.pt-4(href='/admin/module-management/pharmacy/categories')
                    p.fw-bold.text-center Pharmacy
        div
            .row.p-3
                a.col.m-3.shadow.p-3.bg-primary.text-white.pt-4(href='/admin/module-management/laboratory/categories')
                    p.fw-bold.text-center Laboratory
